                <CheckCircle className="text-green-400" size={24} />
                <div>
                  <p className="text-white/70 text-sm">ØªÙ… Ø§Ù„Ø¥Ø±Ø³Ø§Ù„</p>
                  <p className="text-2xl font-black text-white">{sendingStats.sent}</p>
